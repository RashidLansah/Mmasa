rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users can read/write their own data
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Creators - Row Level Security
    // Users can only create/update their own creator profile
    match /creators/{creatorId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.id == request.auth.uid;
      allow delete: if false; // Only admins can delete (implement admin check if needed)
    }
    
    // Slips - Row Level Security
    // Users can only create slips as themselves
    // Only creator can update/delete their own slips
    // System can update slips (for status changes, verification, etc.)
    match /slips/{slipId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.creatorId == request.auth.uid;
      // Creator can update their own slips, or if user is purchasing (adding to purchasedBy)
      allow update: if isAuthenticated() && (
        resource.data.creatorId == request.auth.uid || // Creator can update
        // Allow updates to purchasedBy array when user purchases
        (request.resource.data.purchasedBy != null && 
         request.auth.uid in request.resource.data.purchasedBy &&
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['purchasedBy']))
      );
      allow delete: if isAuthenticated() && resource.data.creatorId == request.auth.uid;
    }
    
    // Users can read their own subscriptions
    match /subscriptions/{subscriptionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Users can read/update their own notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Transactions - Row Level Security
    // Users can only read/create/update their own transactions
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Mobile money accounts - Row Level Security
    // Users can only manage their own accounts
    match /mobileMoneyAccounts/{accountId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Team aliases - Shared cache for team name mappings
    // Public read access (not sensitive data - just team name mappings)
    // Authenticated users can write (to build the cache)
    match /team_aliases/{aliasId} {
      allow read: if true; // Public read - team mappings are not sensitive
      allow write: if isAuthenticated(); // Only authenticated users can write
    }
  }
}

